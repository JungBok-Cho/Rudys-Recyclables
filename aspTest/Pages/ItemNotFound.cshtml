@page
@model RudysRecyclables.Pages.ItemNotFoundModel
@{
    ViewData["Title"] = "ItemNotFound";
}

<h1>ItemNotFound</h1>
<head>
    <style>
        .center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }

        .centerButton {
            margin: 0;
            position: absolute;
            top: 57%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<div class="container h-100 d-flex justify-content-center">
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button type="submit" class="btn btn-primary" asp-area="" asp-page="/AfterSearch">Search</button>
    </form>
    &emsp;
    <form class="form-inline my-2 my-lg-0">
        <select class="form-control">
            <option value="one">Total</option>
            <option value="two">Two</option>
            <option value="three">Three</option>
            <option value="four">Four</option>
            <option value="five">Five</option>
        </select>
    </form>
    &emsp;
    <form class="form-inline my-2 my-lg-0">
        <button type="submit" class="btn btn-primary" asp-area="" asp-page="/Posting">Post</button>
    </form>
</div>
<br>

