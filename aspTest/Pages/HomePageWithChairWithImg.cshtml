@page
@model RudysRecyclables.Pages.HomePageWithChairWithImgModel
@{
    ViewData["Title"] = "HomePageWithChairWithImg";
}


<br>
<script type="text/javascript" src="~/js/site.js"></script>

<div class="text-center">
    <h1 class="display-4">Grey and The Gang</h1>
</div>

<br>

<div class="container h-100 d-flex justify-content-center">
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchtxt">
        <button type="button" class="btn btn-primary" onclick="searchBar()" asp-area="">Search</button>
    </form>

    &emsp;

    <form class="form-inline my-2 my-lg-0">
        <select class="form-control">
            <option value="" selected>Newest</option>
            <option value="one">Oldest</option>
            <option value="two">Most Viewed</option>
        </select>
    </form>

    &emsp;

    <form class="form-inline my-2 my-lg-0">
        <button type="submit" class="btn btn-primary" asp-area="" asp-page="/Posting">Post</button>
    </form>

</div>

<br>

<br>

<div class="card-columns">

    <div class="card">

        <div class="card-img">
            <img src="img/LeatherChair.jpg" class="card-img">
        </div>

        <div class="card-body">
            <a class="card-title" asp-area="" asp-page="/MyItem">Leather Office Chair</a>
        </div>

    </div>

    <div class="card">

        <div class="card-img">
            <img src="~/img/MainLamp.png" class="card-img">
        </div>

        <div class="card-body">
            <a class="card-title" asp-area="" asp-page="/Item">Lamp</a>
        </div>

    </div>

    <div class="card">

        <div class="card-img">
            <img src="~/img/Plants.jpg" class="card-img">
        </div>

        <div class="card-body">
            <a class="card-title" asp-area="" asp-page="/Item">Plants</a>
        </div>

    </div>

    @foreach (var product in Model.Products)
    {
        <div class="card">

            <div class="card-img" style="background-image: url('@product.Image');"></div>

            <div class="card-body">
                <a class="card-title" asp-area="" asp-page="/Item">@product.Title</a>
            </div>

        </div>
    }

</div>
